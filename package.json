{
  "name": "sdk",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev --filter=./packages/* --no-cache --continue --parallel",
    "clean": "turbo run clean --filter=./packages/*",
    "lint": "turbo run lint --parallel --continue --filter=./packages/* -- --max-warnings=0",
    "lint:fix": "yarn lint --parallel --filter=./packages/* -- --fix",
    "test": "jest --verbose",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.0",
    "@swc/core": "^1.3.11",
    "@types/jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "clean-package": "^2.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "jest-localstorage-mock": "^2.4.26",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.5",
    "tsup": "^6.3.0",
    "turbo": "^1.8.5",
    "typescript": "^5.0.2"
  }
}
